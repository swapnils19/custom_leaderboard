<div class="leaderboard">
  <div class="row">
    <div class='col-lg-3'> <br> </div>
    <div class='col-lg-6'>
      <table class="table table-hover font-weight-light">
        <tr>
          <th colspan="3"> Teams </th>
        </tr>

        <% @teams.each do |team| %>
          <tr>
              <td class="text-left pl-5"> <%= team.name %> </td>
              <td class="actions">
                <%= link_to edit_team_path(team) do %>
                  <i class="material-icons button edit">edit</i>
                <% end %>

                <%= link_to team_path(team), method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="material-icons button delete">delete</i>
                <% end %>
              </td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class='col-lg-3'> <br> </div>
  </div>
</div>
