<div class="leaderboard">
  <div class="row">
    <div class='col-lg-12'>
      <%= link_to "Edit #{@team.name}", edit_team_path %>
    </div>
  </div>

  <div class="row">
    <div class='col-lg-3'> <br> </div>
    <div class='col-lg-6'>
      <table class="table table-hover font-weight-light">
        <tr>
          <th> Event </th>
          <th> Points </th>
          <th> Event Date </th>
        </tr>

        <% @events.each do |event| %>
          <tr>
              <td> <%= event.event_name %> </td>
              <td> <%= event.points %> </td>
              <td> <%= event.event_date.strftime('%d/%m/%Y') %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class='col-lg-3'> <br> </div>
  </div>
</div>
