<div class="row card-header">
  <div class='col-lg-12 text-right'>
    <div class="btn-group" role="group">
      <%= link_to "Edit #{@team.name}", edit_team_path, class: 'btn btn-secondary' %>
      <%= link_to 'Add an Event', new_team_event_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>

<div class="row card-body">
  <div class='col-lg-12'>
    <table class="table table-hover font-weight-light">
      <tr>
        <th> Event </th>
        <th> Points </th>
        <th> Event Date </th>
      </tr>

      <% @events.each do |event| %>
        <tr>
            <td> <%= event.event_name %> </td>
            <td> <%= event.points %> </td>
            <td> <%= event.event_date.strftime('%d/%m/%Y') %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
