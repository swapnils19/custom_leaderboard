<div id="main-leaderboard">
    <table class="table table-hover text-white font-weight-light">
        <tr>
            <th> Team </th>
            <th> Event </th>
            <th> Points </th>
            <th> Event Date </th>
        </tr>

        <% @leaderboard.each do |team| %>
            <tr>
                <td> <%= team.team_name %> </td>
                <td> <%= team.event_name %> </td>
                <td> <%= team.points %> </td>
                <td> <%= team.event_date.strftime('%d/%m/%Y') %> </td>
            </tr>
        <% end %>
    </table>
</div>
